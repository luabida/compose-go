{
  "branches": ["main"],
  "tagFormat": "${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["src/__init__.py"],
            "from": "return \".*\"  # changed by semantic-release",
            "to": "return \"${nextRelease.version}\"  # changed by semantic-release",
            "results": [
              {
                "file": "src/__init__.py",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": ["setup.py"],
            "from": "version = \".*\"  # changed by semantic-release",
            "to": "version = \"${nextRelease.version}\"  # changed by semantic-release",
            "results": [
              {
                "file": "setup.py",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "python setup.py sdist bdist_wheel",
        "publishCmd": "twine upload -r testpypi dist/* -u $TWINE_USERNAME -p $TWINE_PASSWORD"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["dist/*.whl", "dist/*.tar.gz"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "setup.py",
          "src/__init__.py"
        ],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ]
}
